<UserControl x:Class="BVCareManager.Controls.ClaimManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BVCareManager.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:BVCareManager.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converter:NumberFormatConverter x:Key="NumberFormatConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="{StaticResource MaterialDesignToolBackground}">
            <ComboBox Style="{StaticResource EmptyComboBoxStyle}" VerticalAlignment="Top" Margin="30"
                  materialDesign:HintAssist.Hint="Nhân viên"
                  ItemsSource="{Binding InsuredList}" IsEditable="True"
                  SelectedItem="{Binding SelectedInsuredName, Mode=TwoWay}"/>

            <TextBox materialDesign:HintAssist.Hint="Số CMT/CCCD" Margin="30, 0"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding SelectedInsuredId, Mode=OneWay}"
                                 IsEnabled="False"/>
        </StackPanel>

        <TabControl Grid.Column="1" materialDesign:ColorZoneAssist.Mode="PrimaryLight" TabStripPlacement="Right"
                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
            
            <materialDesign:NavigationRailAssist.FloatingContent>
                <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Height="50" Width="50" IsTabStop="False"
                        Margin="10, 20" Content="{materialDesign:PackIcon Kind=Add}"/>
            </materialDesign:NavigationRailAssist.FloatingContent>

            <TabItem Header="{materialDesign:PackIcon Kind=TextBoxPlusOutline, Size=24}"
                     ToolTip="Hồ sơ mới"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">

                <StackPanel Margin="80 20 80 20" VerticalAlignment="Top">
                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0,20"
                            materialDesign:HintAssist.Hint="Ngày khám"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <StackPanel Margin="0,20">
                        <ComboBox Style="{StaticResource EmptyComboBoxStyle}"
                              materialDesign:HintAssist.Hint="Đơn bảo hiểm (có hiệu lực)"
                              ItemsSource="{Binding PoliciesList}"
                              SelectedItem="{Binding SelectedPolicy, Mode=TwoWay}"/>

                        <StackPanel HorizontalAlignment="Left" Margin="30, 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                         Kind="CalendarStart" Height="16" Width="16" Foreground="#0c5500"/>

                                <materialDesign:PackIcon Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                         Kind="CalendarEnd" Height="16" Width="16" Foreground="#de3627"/>

                                <materialDesign:PackIcon Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                         Kind="ArrowRightBold" Height="12" Width="12" Foreground="#FF0D47A1"/>

                                <TextBox Grid.Column="1"
                                         Foreground="#0c5500" BorderThickness="0.5" BorderBrush="#0c5500"
                                         IsEnabled="False" FontWeight="DemiBold"
                                         Text="01/01/2021"/>

                                <TextBox Grid.Column="4"
                                         Foreground="#de3627" BorderThickness="0.5" BorderBrush="#de3627"
                                         IsEnabled="False" FontWeight="DemiBold"
                                         Text="31/12/2021"/>
                                
                            </Grid>
                        </StackPanel>

                        
                    </StackPanel>

                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0,10"
                            materialDesign:HintAssist.Hint="Ngày nhận hồ sơ"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                </StackPanel>
                
            </TabItem>
            
            <TabItem Header="{materialDesign:PackIcon Kind=NoteEditOutline, Size=24}"
                     ToolTip="Cập nhật hồ sơ"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">

                <StackPanel Margin="80 20 80 20" VerticalAlignment="Top">
                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0 0 0 0"
                            materialDesign:HintAssist.Hint="Ngày khám"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <StackPanel HorizontalAlignment="Left" Margin="30, 0">
                        <TextBox materialDesign:HintAssist.Hint="Số đơn" MinWidth="200"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding SelectedInsuredId, Mode=OneWay}"
                                 IsEnabled="False"/>
                    </StackPanel>

                    <TextBox Margin="0, 30" Style="{StaticResource EmptyTextboxStyle}"
                             TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Height="80"
                             materialDesign:HintAssist.Hint="Nội dung cập nhật"
                             materialDesign:HintAssist.IsFloating="True"
                             Text="{Binding SelectedInsuredId, Mode=TwoWay}"/>


                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0 0 0 0"
                            materialDesign:HintAssist.Hint="Ngày cập nhật"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{materialDesign:PackIcon Kind=ListStatus, Size=24}"
                     ToolTip="Tình trạng hồ sơ"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">

                <StackPanel Margin="80 20 80 20" VerticalAlignment="Top">
                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0 0 0 0"
                            materialDesign:HintAssist.Hint="Ngày khám"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <StackPanel HorizontalAlignment="Left" Margin="30, 0">
                        <TextBox materialDesign:HintAssist.Hint="Số đơn" MinWidth="200"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding SelectedInsuredId, Mode=OneWay}"
                                 IsEnabled="False"/>
                    </StackPanel>


                    <GroupBox Header="Hoàn thành" Margin="0, 30">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ImageArea" Height="32" Width="32" VerticalAlignment="Center" />
                                    <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>


                        <TextBlock TextWrapping="Wrap"
                            Text="Quá trình đang diễn ra Quá trình đang diễn ra Quá trình đang diễn ra Quá trình đang diễn ra Quá trình đang diễn ra"/>
                    </GroupBox>
                </StackPanel>

                
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
