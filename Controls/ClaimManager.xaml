<UserControl x:Class="BVCareManager.Controls.ClaimManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BVCareManager.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:BVCareManager.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converter:NumberFormatConverter x:Key="NumberFormatConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="20 20 0 0">
            <ComboBox Style="{StaticResource EmptyComboBoxStyle}" VerticalAlignment="Top" Margin="0 0 0 20"
                  materialDesign:HintAssist.Hint="Nhân viên"
                  ItemsSource="{Binding InsuredList}" IsEditable="True"
                  SelectedItem="{Binding SelectedInsuredName, Mode=TwoWay}"/>

            <TextBox materialDesign:HintAssist.Hint="Số CMT/CCCD"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding SelectedInsuredId, Mode=OneWay}"
                                 IsEnabled="False"/>
        </StackPanel>

        <TabControl Grid.Column="2" materialDesign:ColorZoneAssist.Mode="PrimaryLight" TabStripPlacement="Right"
                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
            
            <materialDesign:NavigationRailAssist.FloatingContent>
                <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Height="50" Width="50" IsTabStop="False"
                        Margin="10, 20" Content="{materialDesign:PackIcon Kind=Add}"/>
            </materialDesign:NavigationRailAssist.FloatingContent>

            <TabItem Header="{materialDesign:PackIcon Kind=TextBoxPlusOutline, Size=24}"
                     ToolTip="Hồ sơ mới"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">

                <StackPanel Margin="80 20 80 20" VerticalAlignment="Top">
                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0,20"
                            materialDesign:HintAssist.Hint="Ngày khám"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <StackPanel Margin="0,20">
                        <ComboBox Style="{StaticResource EmptyComboBoxStyle}" Margin="0 20 0 0"
                              materialDesign:HintAssist.Hint="Đơn bảo hiểm (có hiệu lực)"
                              ItemsSource="{Binding PoliciesList}"
                              SelectedItem="{Binding SelectedPolicy, Mode=TwoWay}"/>

                        <StackPanel HorizontalAlignment="Left" Margin="50, 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <materialDesign:PackIcon VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                         Kind="CalendarStart" Height="24" Width="24"/>

                                <materialDesign:PackIcon Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                         Kind="CalendarEnd" Height="24" Width="24"/>

                                <TextBox Grid.Column="1" MinWidth="100" Margin="5"
                                         IsEnabled="False"
                                         Text="01/01/2021"/>

                                <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                                         IsEnabled="False"
                                         Text="31/12/2021"/>


                            </Grid>
                        </StackPanel>

                        
                    </StackPanel>

                    <DatePicker Style="{StaticResource EmptyDatePickerStyle}" Margin="0,20"
                            materialDesign:HintAssist.Hint="Ngày nhận hồ sơ"
                            SelectedDate="{Binding InputFromDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                </StackPanel>
                
            </TabItem>
            
            <TabItem Header="{materialDesign:PackIcon Kind=Update, Size=24}"
                     ToolTip="Cập nhật hồ sơ"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">
                
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
